# Application Settings
NODE_ENV=production
PORT=3001
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=your-nextauth-secret-key-change-me

# Database Settings
MONGO_USERNAME=everleighAdmin
MONGO_PASSWORD=change-this-in-production
MONGODB_URI=mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@mongodb:27017/everleigh?authSource=admin

# Redis Settings
REDIS_USER=
REDIS_PASSWORD=change-this-in-production

# N8N Settings
N8N_USER=admin
N8N_PASSWORD=change-this-in-production

# Sentry Settings
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# LiveKit Settings
LIVEKIT_API_KEY=your-api-key
LIVEKIT_API_SECRET=your-api-secret

# Docker Resource Limits (not used by Docker directly, but can be used in scripts)
NEXTJS_CPU_LIMIT=1
NEXTJS_MEM_LIMIT=1G
NEXTJS_CPU_RESERVATION=0.25
NEXTJS_MEM_RESERVATION=512M

# TypeScript Settings
SOURCE_MAPS=false

